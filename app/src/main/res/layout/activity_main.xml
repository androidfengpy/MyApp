<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fengpy.myapp.MainActivity">

    <ScrollView
        android:id="@+id/id_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_spinner_three_catalog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="三级联动" />

            <Button
                android:id="@+id/btn_read_and_write_json"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="读写Json文件" />

            <Button
                android:id="@+id/btn_data_to_excel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="导出数据到Excel" />

            <Button
                android:id="@+id/btn_json"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="json 解析" />

            <Button
                android:id="@+id/btn_charts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="折线图" />

            <Button
                android:id="@+id/btn_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自定义控件" />

            <Button
                android:id="@+id/btn_setting_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Setting Demo" />

            <Button
                android:id="@+id/btn_tab_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tab Demo" />

            <Button
                android:id="@+id/btn_db_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DB Demo" />

            <Button
                android:id="@+id/btn_geode_marker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gaode Marker" />

            <Button
                android:id="@+id/btn_geode_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gaode Demo" />

            <Button
                android:id="@+id/btn_recycle_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="使用RecycleView实现多选功能" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
